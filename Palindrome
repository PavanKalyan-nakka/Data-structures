#include <stdio.h>
#include <string.h>

int main() {
    char str[100];
    printf("Enter a string: ");
    fgets(str, sizeof(str), stdin);
    str[strcspn(str, "\n")] = '\0';  // remove newline

    int left = 0, right = strlen(str) - 1;
    int isPal = 1;
    while (left < right) {
        if (str[left++] != str[right--]) {
            isPal = 0;
            break;
        }
    }

    if (isPal)
        printf("\"%s\" is a palindrome.\n", str);
    else
        printf("\"%s\" is not a palindrome.\n", str);

    return 0;
}
